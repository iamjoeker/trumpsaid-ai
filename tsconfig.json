{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/**/*"
  ]
}
