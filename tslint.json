{
  "linterOptions": {
    "exclude": ["src/graphql/generated/**", "node_modules/**"]
  },
  "rules": {
    "no-magic-numbers": true,
    "import-name": false,
    "only-arrow-functions": true,
    "await-promise": true,
    "no-return-await": true,
    "no-var-keyword": true,
    "triple-equals": true,
    "use-isnan": true,
    "no-duplicate-imports": true,
    "prefer-const": true,
    "interface-name": true,
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "ordered-imports": true,
    "prefer-method-signature": true,
    "whitespace": true,
    "variable-name": true,
    "no-floating-promises": true,
    "no-string-throw": true,
    "max-line-length": [
      true,
      {
        "limit": 150,
        "ignore-pattern": "//"
      }
    ],
    "prefer-template": [true, "allow-single-concat"],
    "radix": false,
    "no-console": true,
    "completed-docs": { "severity": "warning" }
  },
  "extends": "tslint-config-airbnb"
}
