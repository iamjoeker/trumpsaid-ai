{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["src/graphql/generated/**", "node_modules/**", "**/*.d.ts"]
  },
  "rules": {
    "await-promise": {
      "options": [],
      "severity": "error"
    },
    "object-literal-sort-keys": false,
    "import-name": false,
    "interface-name": true,
    "max-line-length": [
      true,
      {
        "ignore-pattern": "//",
        "limit": 150
      }
    ],
    "no-consecutive-blank-lines": true,
    "no-console": true,
    "no-duplicate-imports": true,
    "no-floating-promises": {
      "options": [],
      "severity": "error"
    },
    "no-irregular-whitespace": true,
    "no-return-await": true,
    "no-string-throw": true,
    "no-var-keyword": true,
    "ordered-imports": true,
    "prefer-const": true,
    "prefer-method-signature": true,
    "prefer-template": [true, "allow-single-concat"],
    "radix": false,
    "triple-equals": true,
    "use-isnan": true,
    "variable-name": true,
    "whitespace": true
  }
}
