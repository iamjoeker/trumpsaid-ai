{
  "references": [{ "path": "../prisma" }],
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    },
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types/client",
    "sourceMap": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["**/**/*.ts", "**/**/*.vue"]
}
