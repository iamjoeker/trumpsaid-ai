{
  "name": "trumpsaid-wtf",
  "license": "CC-BY-NC-4.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:kazazes/trumpsaid-wtf.git"
  },
  "scripts": {
    "build": "bin/build-sources.sh",
    "build-prod": "bin/build-sources.sh && lerna run webpack",
    "debug": "lerna run --parallel debug",
    "dep-check": "lerna run dep-check",
    "deploy": "git diff --exit-code && yarn run build-prod && bin/deploy-static.sh && bin/deploy-instances.sh",
    "start": "lerna run --parallel start",
    "lint": "lerna run lint",
    "watch": "lerna run --parallel watch",
    "clean": "rimraf packages/*/dist && rimraf packages/*/node_modules",
    "version": "lerna run version"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@coreui/**",
      "**/bootstrap/**",
      "**vue**",
      "**webpack**",
      "**youtube-dl**",
      "**/ffmpeg/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "dotenv-cli": "1.4.0",
    "env-cmd": "^8.0.2",
    "graphql": "^0.13.0",
    "lerna": "^3.1.4",
    "node-sass": "^4.9.3",
    "nodemon": "1.18.3",
    "npm-run-all": "4.1.3",
    "pm2": "^3.0.4",
    "rimraf": "2.6.2",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  }
}
